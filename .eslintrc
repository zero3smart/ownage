{
    "parser": "babel-eslint",
    "extends": [
        "standard",
        "standard-react"
    ],
    "plugins": [
        "babel",
        "react",
        "promise"
    ],
    "env": {
        "browser": true
    },
    "globals": {
        "__DEV__": false,
        "__TEST__": false,
        "__PROD__": false,
        "__COVERAGE__": false,
        "__API_URL__": false
    },
    "rules": {
        "key-spacing": 0,
        "jsx-quotes": [2, "prefer-single"],
        "max-len": [2, 120, 2],
        "react/jsx-indent": [1, 4],
        "object-curly-spacing": [2, "always"],
        "semi": [2, "always"],
        "space-before-function-paren": ["error", "never"],
        "indent": [2, 4, {"SwitchCase": 1}]
    }
}
